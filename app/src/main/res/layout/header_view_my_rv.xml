<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_view_my_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:padding="5dp"
        android:src="@drawable/my_header_view_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/header_view_my_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@color/light_blue"
        android:text="@string/my_header_view_title"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/header_view_my_image"
        app:layout_constraintTop_toTopOf="@id/header_view_my_image"/>

    <ImageView
        android:id="@+id/header_view_my_arrow"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/my_content_arrow_unchecked"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>