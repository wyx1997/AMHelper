<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bottom_navi_bg">

    <ImageView
        android:id="@+id/toolbar_common_left_image"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/toolbar_common_middle_text"/>

    <TextView
        android:id="@+id/toolbar_common_middle_text"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textSize="17sp"
        android:textColor="@color/light_blue"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintRight_toLeftOf="@id/toolbar_common_right_image"
        app:layout_constraintLeft_toRightOf="@id/toolbar_common_left_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/toolbar_common_right_image"
        android:layout_width="0dp"
        android:layout_height="13dp"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/toolbar_common_middle_text"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>